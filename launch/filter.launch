<?xml version="1.0"?>
<launch>
    <node pkg="cloudfilter" type="cloudfilter" name="pointcloudfilter" output="screen">
        <remap from="~cloud"     to="/ouster/points"/>
        <remap from="~filtered"  to="/ouster/points_filtered"/>
        <remap from="~polygon"   to="/bounding_box"/>

        <param name="verbose"       type="bool" value="false"/>

        <param name="global_frame"      type="string" value="odom_combined"/>
        <param name="global_zero_frame" type="string" value="base_footprint"/>
        <param name="filter_type"       type="string" value="aabb"/>
        <param name="invert_aabb"       type="bool" value="false"/>

        <param name="aabb_min_x"    type="double" value="-30.0"/>
        <param name="aabb_max_x"    type="double" value="30.0"/>

        <param name="aabb_min_y"    type="double" value="-30.0"/>
        <param name="aabb_max_y"    type="double" value="30.0"/>

        <param name="aabb_min_z"    type="double" value="-0.1"/>
        <param name="aabb_max_z"    type="double" value="1.5"/>

        <param name="min_dist"          type="double" value="0.86"/>
        <param name="max_dist"          type="double" value="4.0"/>
        <param name="invert_distance"   type="bool" value="false"/>

        <param name="fov_left"      type="double" value="-45.0"/>
        <param name="fov_right"     type="double" value="45.0"/>
        <param name="enable_fov"    type="bool" value="true"/>

        <param name="invert_polygon"    type="bool" value="false"/>
    </node>
</launch>
